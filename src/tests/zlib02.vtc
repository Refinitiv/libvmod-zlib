varnishtest "ZLIB: edge tests"

server s1 {
        rxreq
        expect req.http.content-encoding == <undef>
        expect req.http.content-length == 0
        txresp -status 200

        rxreq
        expect req.http.content-encoding == <undef>
        expect req.http.content-length == 0
        txresp -status 200

        rxreq
        expect req.http.content-encoding == <undef>
        expect req.http.content-length == <undef>
        txresp -status 200
} -start

varnish v1 -vcl+backend {
    import ${vmod_zlib};

    sub vcl_recv {
            if(zlib.unzip_request() == -1) {
                    return (synth(400, "can't uncompress request's body"));
            }
    }
} -start

client c1 {
        timeout 4

        txreq -req POST -body {}
        rxresp
        expect resp.status == 200
        txreq -req POST -gzipbody {}
        rxresp
        expect resp.status == 200
        txreq -req POST
        rxresp
        expect resp.status == 200
} -run
 
