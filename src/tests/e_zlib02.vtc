varnishtest "ZLIB: test correct handling of bad content-encoding"

server s1 {
} -start

varnish v1 -vcl+backend {
    import ${vmod_zlib};

    sub vcl_recv {
            if (zlib.unzip_request() < 0) {
                    return (synth(400, "can't uncompress request's body"));
            }
    }
} -start

client c1 {
        txreq -req POST -hdr "Content-Encoding: leningrad" -gzipbody {xxxx}
        rxresp
        expect resp.status == 400
} -run
 
